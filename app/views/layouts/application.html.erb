	</body>
	<script src="assets/nanobar-master/nanobar.min.js"></script>
	<script>
		var options = {
		    bg: '#fdfdfd',
		    // leave target blank for global nanobar
		    target: null,
		    //target: document.getElementById('myDivId'),
		    // id for new nanobar
		    id: 'page_progress'
		};

		var nanobar = new Nanobar( options );

		//move bar
		nanobar.go( 30 ); // size bar 30%

		// Finish progress bar
		nanobar.go(100);
	</script>
