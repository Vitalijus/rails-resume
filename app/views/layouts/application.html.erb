<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>

</head>
	<body>
		<div id="page_progress"></div>
		<header>
		    <div id="bottom_nav">
		      <!--<%= render "counter" %>-->

		      <ul>
		        <li><a href="#home_page">Home</a></li>
		        <li><a href="#resume_page">Résumé</a></li>
